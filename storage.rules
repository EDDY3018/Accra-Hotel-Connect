
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow managers to upload images for their own rooms.
    // The path is rooms/{managerUid}/{roomNumber}/{imageName}
    match /rooms/{uid}/{roomNumber}/{allPaths=**} {
      allow read: if true; // Allow public reads for room images
      allow write: if request.auth != null && request.auth.uid == uid;
    }
  }
}
