rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files. 
    // This is necessary for anyone to be able to see room images in the app.
    match /{allPaths=**} {
      allow read;
    }
    
    // ROOMS: 
    // Allow a manager to upload images only to a folder corresponding to their own UID.
    // This ensures that managers can only add images for their own hostel rooms.
    match /rooms/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
