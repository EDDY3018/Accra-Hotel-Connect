rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default rule: Allow public read access to all files for displaying images.
    match /{allPaths=**} {
      allow read;
    }

    // ROOMS: Allow a manager to upload images only to a folder corresponding
    // to their own UID. This ensures managers can only add images for their own rooms.
    match /rooms/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
